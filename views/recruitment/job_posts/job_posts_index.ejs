        font-family: "Poppins", sans-serif;
      }

      .header {
        background-color: #006d77;
        text-align: center;
        color: white;
        padding: 0.5rem 2rem;
        border-radius: 0 0.5rem 0.5rem 0;
        font-size: 2rem;
        font-weight: bold;
        display: inline-block;
        margin-bottom: 2rem;
      }

      .avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-right: 1.5rem;
        border: 3px solid #006d77;
      }

      .job-title-wrapper {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid #006d77;
        padding-bottom: 0.4rem;
        margin-bottom: 0.7rem;
      }

      .job-title {
        font-weight: bold;
        font-size: 2rem;
        color: #006d77;
      }

      .collapse-icon {
        font-size: 2rem;
        color: #006d77;
        cursor: pointer;
      }

      .job-description {
        font-size: 0.95rem;
        font-weight: 500;
        color: #006d77;
        margin-top: 0.5rem;
        padding-top: 0.2rem;
      }

      th {
        background-color: #006d77 !important;
        color: white !important;
        text-align: center;
      }

      td {
        text-align: center;
        vertical-align: middle !important;
      }

      .job-section {
        margin-bottom: 1rem;
      }

      .chevron-btn {
        border: none;
        background: transparent;
        color: #006d77;
        font-size: 1.5rem;
        outline: none;
      }
    </style>
