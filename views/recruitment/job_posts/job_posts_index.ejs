            class="avatar"
          />
        </div>
      </div>

      <!-- JOB TEMPLATE START -->
      <!-- Repeat this block with different IDs and titles -->

      <!-- Telecaller -->
      <div class="job-section mt-3">
        <div class="job-title-wrapper col-md-5 mx-5">
          <div class="job-title">1. Telecaller</div>
          <button
            class="chevron-btn"
            data-bs-toggle="collapse"
            data-bs-target="#collapseTelecaller"
            aria-expanded="false"
          >
            <i class="bi bi-chevron-down" id="iconTelecaller"></i>
          </button>
        </div>
        <div class="collapse" id="collapseTelecaller">
          <div class="job-description col-md-5 mx-5 mb-3">
            The role involves explaining course details, converting leads into
            walk-ins or enrollments, and maintaining call records. Candidates
            should have good communication skills in English, Hindi, and
            Marathi, along with basic computer knowledge.
          </div>
          <div class="table-responsive mx-5">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Sr.N</th>
                  <th>Id</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Gender</th>
                  <th>Experience</th>
                  <th>Job Post</th>
                  <th>View</th>
                  <th>Delete</th>
                  <th>Edit</th>
                </tr>
              </thead>
              <tbody>
                <% let telecallerData = data.filter(val => val.job_post_type ===
                'Telecaller'); if (telecallerData.length > 0) {
                telecallerData.forEach((val, index) => { %>
                <tr>
                  <td><%= index + 1 %>.</td>
                  <td><%= val.candidate_id %></td>
                  <td><%= val.candidate_name %></td>
                  <td><%= val.candidate_email %></td>
                  <td><%= val.candidate_gender %></td>
                  <td><%= val.candidate_experience %></td>
                  <td><%= val.job_post_type %></td>
                  <td>
                    <a href="/view_candidate/<%- val.candidate_id %>">
                      <i
                        class="bi bi-box-arrow-up-right fw-bold"
                        style="cursor: pointer; color: #006d77"
                      ></i>
                    </a>
                  </td>
                  <td>
                    <a
                      href="/delete_candidate/<%- val.candidate_id %>"
                      onclick="return confirm('Are you sure?')"
                    >
                      <i
                        class="bi bi-trash fw-bold"
                        style="cursor: pointer; color: crimson"
                      ></i
                    ></a>
                  </td>
                  <td>
                    <a href="/edit_candidate/<%- val.candidate_id %>">
                      <i
                        class="bi bi-pencil fw-bold"
                        style="cursor: pointer; color: #006d77"
                      ></i
                    ></a>
                  </td>
                </tr>
                <% }); } else { %>
                <tr>
                  <td colspan="11" class="text-center">
                    No data found for Telecaller
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

